@{
    ViewBag.Title = "Home Page";
}
<br />


   
        @foreach (var gra in ViewBag.Gry)
        {
            if (gra.Zdjecie == null)
            {

                <div class="row">
                    <img src="/Content/Images/Black.jpg" width="300" style="float:left; margin: 10px;" />
                    <p>
                        <a href="https://go.microsoft.com/fwlink/?LinkId=301865">
                            <div style="background-color:lavender">
                                <h4><font color="black"> @gra.Tytul</font></h4>
                            </div>
                        </a>
                    </p>
                    @if(gra.Platforma != null){
                    foreach (var g in gra.Platforma)
                    {
                        <div> Platforma: @g</div>
                    }}
                    @if (gra.Gatunek != null)
                    {
                        foreach (var g in gra.Gatunek)
                        {
                            <div> Gatunek: @g</div>
                        }
                    }
                    Producent: @gra.Producent <br />
                    Wydawca: @gra.Wydawca <br />
                    Data_premiery: @gra.Data_premiery <br />

                </div>

            }
            else
            {

            <div class="row">
                <img src="@gra.Zdjecie" width="300" style="float:left; margin: 10px;" />
                <p><a href="https://go.microsoft.com/fwlink/?LinkId=301865">
                    <div style="background-color:lavender"> 
                        <h4><font color="black"> @gra.Tytul</font></h4>
                    </div></a>
                </p>
                    @if (gra.Platforma != null)
                    {
                        foreach (var g in gra.Platforma)
                        {
                            <div> Platforma: @g</div>
                        }
                    }
                    @if (gra.Gatunek != null)
                    {
                        foreach (var g in gra.Gatunek)
                        {
                            <div> Gatunek: @g</div>
                        }
                    }
                    Producent: @gra.Producent <br />
                    Wydawca: @gra.Wydawca <br />
                    Data_premiery: @gra.Data_premiery <br />

            </div>
            }

        }
    




